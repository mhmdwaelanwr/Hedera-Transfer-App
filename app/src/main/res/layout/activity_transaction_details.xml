<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TransactionDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:hapticFeedbackEnabled="true"
            app:fontFamily="@font/segoe_ui_semibold"
            app:title="Transaction Details" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/transaction_details_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hapticFeedbackEnabled="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/details_transaction_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceHeadline5"
                        android:fontFamily="@font/segoe_ui_semibold"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Sent" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="?attr/dividerHorizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/details_transaction_type" />

                    <TextView
                        android:id="@+id/details_party_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="To:"
                        android:fontFamily="@font/segoe_ui_semibold"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider" />

                    <TextView
                        android:id="@+id/details_party"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="end"
                        android:fontFamily="@font/roboto_mono"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintBaseline_toBaselineOf="@+id/details_party_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/details_party_label"
                        tools:text="0.0.7103072" />

                    <TextView
                        android:id="@+id/details_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Date:"
                        android:fontFamily="@font/segoe_ui_semibold"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/details_party" />

                    <TextView
                        android:id="@+id/details_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="end"
                        android:fontFamily="@font/segoe_ui_regular"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintBaseline_toBaselineOf="@+id/details_date_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/details_date_label"
                        tools:text="2025-12-06 12:05:55" />

                    <TextView
                        android:id="@+id/details_amount_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Amount:"
                        android:fontFamily="@font/segoe_ui_semibold"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/details_date" />

                    <TextView
                        android:id="@+id/details_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="end"
                        android:fontFamily="@font/roboto_mono"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintBaseline_toBaselineOf="@+id/details_amount_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/details_amount_label"
                        tools:text="-1.00000000 h" />

                    <TextView
                        android:id="@+id/details_status_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Status:"
                        android:fontFamily="@font/segoe_ui_semibold"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/details_amount" />

                    <TextView
                        android:id="@+id/details_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="end"
                        android:fontFamily="@font/segoe_ui_regular"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintBaseline_toBaselineOf="@+id/details_status_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/details_status_label"
                        tools:text="SUCCESS" />

                    <TextView
                        android:id="@+id/details_fee_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Fee:"
                        android:fontFamily="@font/segoe_ui_semibold"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/details_status" />

                    <TextView
                        android:id="@+id/details_fee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="end"
                        android:fontFamily="@font/roboto_mono"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintBaseline_toBaselineOf="@+id/details_fee_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/details_fee_label"
                        tools:text="0.00076048 h" />

                    <TextView
                        android:id="@+id/details_memo_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Memo:"
                        android:fontFamily="@font/segoe_ui_semibold"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/details_fee" />

                    <TextView
                        android:id="@+id/details_memo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="end"
                        android:fontFamily="@font/segoe_ui_regular"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintBaseline_toBaselineOf="@+id/details_memo_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/details_memo_label"
                        tools:text="" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/copy_button"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="true"
            android:fontFamily="@font/segoe_ui_semibold"
            android:text="Copy" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/export_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="true"
            android:fontFamily="@font/segoe_ui_semibold"
            android:text="Export" />
    </LinearLayout>
</LinearLayout>